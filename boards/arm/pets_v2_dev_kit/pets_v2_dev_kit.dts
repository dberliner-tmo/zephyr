/dts-v1/;
#include <silabs/efm32pg12b500f1024gl125.dtsi>

/ {
    model = "Silicon Labs EFM32PG STK3402A board";
    compatible = "tmo,pets_v2";
    
    chosen {
        zephyr,console = &leuart0;
        zephyr,shell-uart = &leuart0;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        watchdog0 = &wdog0;
        watchdog1 = &wdog1;
    };

    /* These aliases are provided for compatibility with samples */
    aliases {
        led0 = &led0;
        sw0 = &button0;
        modem = &usart1;        
    };

    leds {
        compatible = "gpio-leds";

        led0: led_0 {
            gpios = <&gpioc 7 0>;
            label = "LED 0";
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpiob 13 GPIO_ACTIVE_LOW>;
            label = "User Push Button 0";
        };
    };

    regulator_batt: regulator-bat-chg {
        label = "vsys-batt-chg";
        regulator-name = "bq24250rge";
        regulator-boot-on;
    };
};

&cpu0 {
    clock-frequency = <40000000>;
};

&usart2 {
    current-speed = <115200>;
    location-rx = <GECKO_LOCATION(1) GECKO_PORT_A GECKO_PIN(7)>;
    location-tx = <GECKO_LOCATION(1) GECKO_PORT_A GECKO_PIN(6)>;
    status = "okay";
    label = "UART_2";
};

&usart0 {
    current-speed = <115200>;
    location-rx = <GECKO_LOCATION(0) GECKO_PORT_A GECKO_PIN(1)>;
    location-tx = <GECKO_LOCATION(0) GECKO_PORT_A GECKO_PIN(0)>;
    status = "okay";   
    label = "UART_0";
};

&usart1 {
    current-speed   = <115200>;
    location-rx     = <GECKO_LOCATION(14) GECKO_PORT_D GECKO_PIN(13)>;
    location-tx     = <GECKO_LOCATION(14) GECKO_PORT_D GECKO_PIN(12)>;
    location-cts    = <GECKO_LOCATION(14) GECKO_PORT_D GECKO_PIN(11)>;    
    location-rts    = <GECKO_LOCATION(14) GECKO_PORT_D GECKO_PIN(10)>;
    hw-flow-control;
    status = "okay";
    
    label = "UART_1";
    
    murata_1sc: murata_1sc {
        compatible = "murata,1sc";
        mdm-wake-host-gpios = <&gpiod 8 GPIO_ACTIVE_LOW>;        
        mdm-wake-mdm-gpios = <&gpiod 14 GPIO_ACTIVE_LOW>;
        mdm-reset-gpios = <&gpiod 15 GPIO_ACTIVE_LOW>;
        status = "okay";
    };
};

&leuart0 {
    current-speed = <9600>;
    location-rx = <GECKO_LOCATION(6) GECKO_PORT_B GECKO_PIN(12)>;
    location-tx = <GECKO_LOCATION(6) GECKO_PORT_B GECKO_PIN(11)>;
    status = "okay";
};

&i2c0 {
    location-sda = <GECKO_LOCATION(15) GECKO_PORT_C GECKO_PIN(10)>;
    location-scl = <GECKO_LOCATION(15) GECKO_PORT_C GECKO_PIN(11)>;
    status = "okay";
};

&i2c1 {
    location-sda = <GECKO_LOCATION(12) GECKO_PORT_J GECKO_PIN(15)>;
    location-scl = <GECKO_LOCATION(10) GECKO_PORT_J GECKO_PIN(14)>;
    status = "okay";
    
        tmp108: tmp108@48 {
            compatible = "ti,tmp108";
            reg = <0x48 0x4>;
            status = "okay";
            temp-gpios = <&gpiof 14 GPIO_ACTIVE_HIGH>;
            label = "TEMP_0";
        };
        
        bma400: bma400@14 {
            compatible = "bosch,bma400";
            reg = <0x14 0x4>;
            status = "okay";
        };               
    
        bq24250: bq24250@6a {
            compatible = "ti,bq24250";
            reg = <0x6a 0x7>;
            status = "okay";
            label = "CHG_0";
        };
};

&rtcc0 {
    prescaler = <1>;
    status = "okay";
};

&gpio {
    location-swo = <0>;
    status = "okay";
};

&gpioa {
    status = "okay";
};

&gpiob {
    status = "okay";
};

&gpioc {
    status = "okay";
};

&gpiod {
    status = "okay";
};

&gpiof {
    status = "okay";
};

&gpioj {
    status = "okay";
};

&gpiok {
    status = "okay";
};

&wdog0 {
    status = "okay";
};

&wdog1 {
    status = "okay";
};


&flash0 {

    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        /* Set 6Kb of storage at the end of the 1024Kb of flash */
        storage_partition: partition@fe800 {
            label = "storage";
            reg = <0x000fe800 0x00001800>;
        };

    };
};

&trng0 {
        status = "okay";
};